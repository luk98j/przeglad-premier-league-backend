<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="season-details-table-ct" author="ukson">
        <createTable tableName="season_details_table">
            <column name="id" type="BIGINT" />
            <column name="season_id" type="BIGINT" />
            <column name="club_id" type="BIGINT" />
            <column name="position" type="BIGINT" />
            <column name="points" type="BIGINT" />
            <column name="season_goals" type="BIGINT" />
            <column name="season_conceded" type="BIGINT" />
            <column name="season_goal_difference" type="BIGINT" />
            <column name="matches_played" type="BIGINT" />
            <column name="corrections" type="BIGINT" />
            <column name="short_hand" type="varchar(255)" />
            <column name="wdl_record" type="varchar(255)" />
            <column name="country" type="varchar(255)" />
            <column name="clean_name" type="varchar(255)" />
            <column name="season_wins_overall" type="BIGINT" />
            <column name="season_draws_overall" type="BIGINT" />
            <column name="season_losses_overall" type="BIGINT" />
            <column name="season_wins_home" type="BIGINT" />
            <column name="season_draws_home" type="BIGINT" />
            <column name="season_losses_home" type="BIGINT" />
            <column name="season_goals_home" type="BIGINT" />
            <column name="season_conceded_home" type="BIGINT" />
            <column name="season_wins_away" type="BIGINT" />
            <column name="season_draws_away" type="BIGINT" />
            <column name="season_losses_away" type="BIGINT" />
            <column name="season_goals_away" type="BIGINT" />
            <column name="season_conceded_away" type="BIGINT" />
        </createTable>
    </changeSet>

</databaseChangeLog>